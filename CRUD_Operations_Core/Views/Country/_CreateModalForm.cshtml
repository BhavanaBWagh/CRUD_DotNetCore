@model CRUD_Operations_Core.Models.Country

<form asp-action="CreateModalForm" data-ajax="true" data-ajax-success="refreshCountryList();">

    <div class="card-details ">
        <h3 class="title">Insert Country Details</h3>
        <div class="row">
            <div class="form-group col-sm-8">
                <label for="Name" class="mb-0 mt-2">Country Name</label>
                <input id="Name" name="Name" asp-for="Name" type="text" class="form-control" placeholder="Country Name" value="@Model.Name">
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-sm-8">
                <label for="Code" class="mb-0 mt-2">Country Code</label>
                <input id="Code" name="Code" asp-for="Code" type="text" class="form-control" placeholder="Country Code" value="@Model.Code">
                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-sm-8">
                <label for="Currency" class="mb-0 mt-2">Currency</label>
                <input id="Currency" name="Currency" asp-for="Currency" type="text" class="form-control" placeholder="Currency" value="@Model.Currency">
                @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
            </div>

            <div class="form-group  mt-4" style="display:none">
                
                    <input id="btnSubmit" type="submit" value="Create" class="btn btn-success" />
             
                <a class="btn btn-danger" href="/country/index">Cancel</a>
            </div>
        </div>
    </div>
</form>

  @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  }

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
                           

