@model List<CRUD_Operations_Core.Models.Country>


@{
    var name = "";
    var code = "";
    var currency = "";
}
@foreach (var item in Model)
{
     name = item.Name;
     code = item.Code;
     currency = item.Currency;
}
<div style="min-height: auto;">
<main class="page payment-page">
    <section class="payment-form dark">
        <div class="container">
            <div class="block-heading">
                <h2>Country Details</h2>

            </div>

            <form>

                <div class="card-details ">
                    <h3 class="title">Country Details</h3>
                    <div class="row">
                        <div class="form-group col-sm-8">
                            <label for="Name" class="mb-0 mt-2">Country Name</label>
                            <input id="Name" disabled name="Name" type="text" class="form-control" value="@name">
                        </div>

                        <div class="form-group col-sm-8">
                            <label for="Code" class="mb-0 mt-2">Country Code</label>
                            <input id="Code" disabled name="Code" type="text" class="form-control" value="@code">
                        </div>

                        <div class="form-group col-sm-8">
                            <label for="Currency" class="mb-0 mt-2">Currency</label>
                            
                            <input id="Currency" disabled name="Currency" type="text" class="form-control"  value="@currency">
                        </div>

                        <div class="form-group  mt-4">
                            <a class="btn btn-secondary"  href="/country/index">Go back</a>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </section>
</main>
</div>






