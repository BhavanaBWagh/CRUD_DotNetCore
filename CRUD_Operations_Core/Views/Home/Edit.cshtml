@model CRUD_Operations_Core.Models.Person



<style>

     .custom-file-button input[type=file] {
      margin-left: -2px !important;
    }

    .custom-file-button input[type=file]::-webkit-file-upload-button {
      display: none;
    }

    .custom-file-button input[type=file]::file-selector-button {
      display: none;
    }

    .custom-file-button:hover label {
      background-color: #dde0e3;
      cursor: pointer;
    }

</style>


@{
    string dob = "";
   
        dob = @Model.DOB.ToString("yyyy-MM-dd");
    
}

<div style="min-height: auto;">
    <main class="page payment-page">
        <section class="payment-form dark">
            <div class="container">
                <div class="block-heading">
                    <h2>Edit Person</h2>
                </div>

            <form action="/home/edit" method="post" enctype = "multipart/form-data">

                    <div class="card-details ">
                        <h3 class="title">Edit Person Details</h3>
                        <div class="row">
                            
                            <div class="form-group col-sm-7">
                                <input type="hidden" name="Id" value="@Model.Id" />
                            <label for="FirstName" class="mb-0 mt-2">First Name</label>
                                <input id="FirstName" name="FirstName" type="text" class="form-control" placeholder="First Name" value="@Model.FirstName">
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-sm-5">
                                <label for="DOB" class="mb-0 mt-2">Date Of Birth</label>
                                <input type="date" class="form-control" id="DOB" name="DOB" placeholder="Date Of Birth" value="@dob" />
                                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-sm-7">
                                <label for="LastName" class="mb-0 mt-2">Last Name</label>
                                <input id="LastName" name="LastName" type="text" class="form-control" placeholder="Last Name" value="@Model.LastName">
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-sm-5">

                                <label for="gender" class="mb-0 mt-2">Gender</label><br/>
                                @if (Model.Gender == "Female"){
                                <div class="form-check form-check-inline" style="padding-top:5px">
                                   
                                    <input class="form-check-input"  type="radio"  name="Gender" id="Gender" asp-for="Gender" value="Female" selected="selected" />
                                    <label class="form-check-label" style="color:black; font-size:14px; font-weight:normal;text-transform: capitalize" for="Gender">Female</label>

                                </div>
                                <div class="form-check form-check-inline" style="padding-top:5px">

                                    <input class="form-check-input" type="radio" name="Gender" id="Gender" asp-for="Gender" value="Male" />
                                    <label class="form-check-label" style="color:black; font-size:14px; font-weight:normal;text-transform: capitalize" for="Gender">Male</label>

                                </div>
                                }else{
                                     <div class="form-check form-check-inline" style="padding-top:5px">
                                   
                                    <input class="form-check-input"  type="radio"  name="Gender" id="Gender" asp-for="Gender" value="Female" />
                                    <label class="form-check-label" style="color:black; font-size:14px; font-weight:normal;text-transform: capitalize" for="Gender">Female</label>

                                </div>
                                <div class="form-check form-check-inline" style="padding-top:5px">

                                        <input class="form-check-input" type="radio" name="Gender" id="Gender" asp-for="Gender" value="Male" selected="selected" />
                                    <label class="form-check-label" style="color:black; font-size:14px; font-weight:normal;text-transform: capitalize" for="Gender">Male</label>

                                </div>
                                }
                            </div>

                            <div class="form-group col-sm-7">
                                <label for="EmailId" class="mb-0 mt-2">Email-ID</label>
                                <input id="EmailId" name="EmailId" type="text" class="form-control" placeholder="Email" value="@Model.EmailId" >
                                @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-sm-5">
                                <label for="Active" class="mb-0 mt-2">Status</label><br />
                                @if (Model.Active == true)
                                {
                                    <div style="padding-top:5px">
                                        <input class="form-check-input" type="checkbox" id="Active" asp-for="Active" selected="selected"  style="padding-right=2px" />
                                        <label class="form-check-label" style="color:black; font-size:14px; font-weight:normal;text-transform: capitalize" asp-for="Active">Active</label>
                                </div>
                                }
                                else
                                {
                                    <div style="padding-top:5px">
                                        <input class="form-check-input" type="checkbox" id="Active" asp-for="Active"  style="padding-right=2px" />
                                        <label class="form-check-label" style="color:black; font-size:14px; font-weight:normal;text-transform: capitalize" asp-for="Active">Active</label>
                                    </div>
                                }
                            </div>

                       <div class="form-group col-sm-7 mb-2">

                                <label for="CountryId" class="mb-0 mt-2">Country</label>
                              
                                <select type="text" class="form-control" name="CountryId" placeholder="CountryId" asp-for="CountryId" asp-items="ViewBag.country" onclick="FillCities(this,'lstCity');">
                                </select>
                                @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })

                         </div>



                            <div class="form-group col-sm-5">

                               <label for="CityId" class="mb-0 mt-2">City</label>
                                
                                  <select type="text" class="form-control" id="lstCity" name="CityID" placeholder="CityID" asp-for="CityId" asp-items="ViewBag.city">
                                </select>
                                @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group col-sm-12">


               <div class="col-md-12 btn-group pb-2">
                    <div class="form-group col-3 p-0">
                        <label asp-for="ProfilePhoto" class="control-label"></label>
                                        <img id="PreviewPhoto" src="data:image;base64,@Model.PhotoUrl" alt="Logo Image"
							 width="125" height="110"/>
                        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                    </div>

                    <div class="col-1 p-0">
                    </div>
                    <div class="form-group col-7 p-0">
                        <div class="input-group custom-file-button mt-5 pt-5" >
                            <input asp-for="ProfilePhoto" class="form-control custom-file-input "  style="font-size:14px;" id="customFile">
                            <label class="input-group-text input-group-lg form-label" style="color:black; font-size:14px;height:20px; font-weight:normal;text-transform: capitalize" for="customFile">Browse</label>                 
                        </div>				
                    </div>

                </div>
             </div>


                            <div class="form-group  mt-4">
                            <button type="submit" class="btn btn-success">Save</button>
                            <a class="btn btn-danger" href="/home/index">Cancel</a>
                            </div>

                            <div class="form-group pt-0 mt-0">
                               
                                <div ID="HiddenDiv" style="visibility: hidden;">
                                    <input asp-for="PhotoUrl" id="PhotoUrl" value="@Model.PhotoUrl" />
                                </div>
                        </div>
                    </div>
                    </div>
                </form>
            </div>
        </section>
    </main>
  </div>


    

