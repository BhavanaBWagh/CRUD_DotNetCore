@model List<CRUD_Operations_Core.Models.Person>


@{
    var id=0;
    var fname = "";
    var lname = "";
   var url = "";
}
@foreach (var item in Model)
{
    id = item.Id;
    fname = item.FirstName;
     lname = item.LastName;
    url = item.PhotoUrl;
    //  currency = item.Currency;
}

<div style="min-height: auto;">
<main class="page payment-page">
    <section class="payment-form dark">
        <div class="container">
            <div class="block-heading">
                <h2>Delete Person</h2>

            </div>

            <form action="/home/delete/@id" method="post">

                <div class="card-details ">
                    <h3 class="title">Delete Person</h3>
                    <div class="row">

                        <div class="form-group col-sm-3">

                            <td><img src="data:image;base64,@url" alt="Not Available" width="100" height="100" style="border-radius:20px" /></td>

                        </div>
                        <div class="form-group col-sm-9">
                            <div class="alert alert-dark" >
                                <strong>Do you want to Delete the City: @fname @lname</strong>
                               
                            </div>
                        </div>
                        
                        <div class="form-group  mt-4">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a class="btn btn-secondary" href="/city/index">Go back</a>
                        </div>
                        <div class="form-group  mt-4 text-danger" asp-validation-summary="ModelOnly"></div>
                    </div>
                </div>
            </form>
        </div>
    </section>
</main>
</div>







