@model CRUD_Operations_Core.Models.City

<div style="min-height: auto;">
    <main class="page payment-page">
        <section class="payment-form dark">
            <div class="container">
                <div class="block-heading">
                    <h2>Create Country</h2>
                   
                </div>

			<form action="/city/create" method="post">
                    
                    <div class="card-details ">
                        <h3 class="title">Insert City Details</h3>
                        <div class="row">
                            <div class="form-group col-sm-8">
							<label for="Name" class="mb-0 mt-2">City Name</label>
							<input id="Name" name="Name" type="text" class="form-control" placeholder="City Name" value="@Model.Name">
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                            </div>

                            <div class="form-group col-sm-8">
							<label for="Code" class="mb-0 mt-2">City Code</label>
                                <input id="Code" name="Code" type="text" class="form-control" placeholder="City Code" value="@Model.Code">
                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })

                            </div>

						<div class="form-group col-sm-8">
                                
                                <label for="CountryId" class="mb-0 mt-2">Country</label>
                                <select type="text" class="form-control" id="CountryId" asp-for="CountryId" name="CountryId" placeholder="CountryId">
                                <option value="" selected disabled hidden>Please Select</option>
                                @foreach (var con in ViewBag.country)
                                {
                                <option value="@con.Value">@con.Text</option>
                                }
                                </select>
                                @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })

						</div>
                            
                            <div class="form-group  mt-4">
                             
							<button type="submit" class="btn btn-success">Create</button>
							<a class="btn btn-danger" href="/city/index">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </main>
  </div>

