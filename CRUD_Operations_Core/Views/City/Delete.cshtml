@model List<CRUD_Operations_Core.Models.City>


@{
    var id=0;
    var name = "";
    var code = "";
 //   var currency = "";
}
@foreach (var item in Model)
{
    id = item.Id;
    name = item.Name;
     code = item.Code;
   //  currency = item.Currency;
}

<main class="page payment-page">
    <section class="payment-form dark">
        <div class="container">
            <div class="block-heading">
                <h2>Delete Country</h2>

            </div>

            <form action="/city/delete/@id" method="post">

                <div class="card-details ">
                    <h3 class="title">Delete City</h3>
                    <div class="row">
                        <div class="form-group col-sm-12">
                            <div class="alert alert-dark">
                                <strong>Do you want to Delete the City: @name (@code)</strong>
                               
                            </div>
                        </div>

                        <div class="form-group  mt-4">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a class="btn btn-secondary" href="/city/index">Go back</a>
                        </div>
                        <div class="form-group  mt-4 text-danger" asp-validation-summary="ModelOnly"></div>
                    </div>
                </div>
            </form>
        </div>
    </section>
</main>







